{
  "compilerOptions": {
    "module": "CommonJS",
    "sourceRoot": "./src",
    "sourceMap": true,
    "target": "ES2022",
    "charset": "utf8",
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "pretty": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@nmhillusion/n2mix/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
