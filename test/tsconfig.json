{
  "compilerOptions": {
    "sourceRoot": "./src",
    "sourceMap": true,
    "target": "ES3",
    "charset": "utf8",
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "pretty": true,
    "rootDir": "../",
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@nmhillusion/n2mix/*": ["../src/typescript/*"]
    }
  },
  "include": ["./src/**/*", "../src/typescript/**/*"],
  "exclude": ["node_modules/**/*"]
}
