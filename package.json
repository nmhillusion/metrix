{
  "name": "metrix",
  "version": "0.0.1",
  "description": "util and component for web, in metrix style",
  "main": "index.js",
  "watch": {
    "scss": {
      "extensions": "scss",
      "quiet": false,
      "patterns": [
        "scss"
      ]
    },
    "pug": {
      "extensions": "pug",
      "quiet": false,
      "patterns": [
        "./"
      ]
    },
    "js": {
      "extensions": "js",
      "quiet": false,
      "patterns": [
        "js"
      ]
    }
  },
  "scripts": {
    "scss": "node ./scss-build.js",
    "pug": "node ./pug-build.js",
    "js": "npm test && npx webpack --config webpack.config.js",
    "watch": "npm-watch",
    "test": "jest",
    "start": "npm run watch",
    "build": "npm test && npm run scss && npm run pug && npm run js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nmhillusion/metrix-css.git"
  },
  "keywords": [
    "nmhillusion"
  ],
  "author": "nmhillusion",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nmhillusion/metrix-css/issues"
  },
  "homepage": "https://github.com/nmhillusion/metrix-css#readme",
  "devDependencies": {
    "node-sass": "^6.0.1",
    "npm-watch": "^0.11.0",
    "pug": "^3.0.2",
    "jest": "^27.4.3",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1",
    "dotenv": "^10.0.0"
  }
}
